{
  "description": {
    "basedOn": "https://github.com/palantir/tslint/blob/6202637738d66f6d9f26f0ef12c0a7f0b64bb46b/src/configs/recommended.ts",
    "futureImprovements": "Bring max-line-length back to 120",
    "withPublicVersion": "3.13.0",
    "withUnknownFlag": "no-unused-new"
  },
  "extends": "tslint:recommended",
  "rules": {
    "comment-format": [true, "check-space", "check-uppercase"],
    "max-line-length": [true, 200],
    "member-access": [true, "check-accessor", "check-constructor"],
    "member-ordering": [true, {"order": "fields-first"}],
    "no-angle-bracket-type-assertion": true,
    "no-constructor-vars": true,
    "no-default-export": true,
    "no-inferrable-types": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-mergeable-namespace": true,
    "no-null-keyword": true,
    "no-require-imports": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": true,
    "quotemark": [true, "jsx-double", "single"],
    "trailing-comma": [true, {"singleline": "never", "multiline": "never"}],
    "typedef": [true, "call-signature", "member-variable-declaration", "parameter", "property-declaration"],
    "variable-name": [true, "allow-leading-underscore", "ban-keywords", "check-format"],
    "whitespace": [true, "check-branch", "check-decl", "check-module", "check-operator", "check-separator", "check-type", "check-typecast"]
  }
}
